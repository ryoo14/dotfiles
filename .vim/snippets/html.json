{
  "html": {
    "prefix": "html",
    "body": [
      "<!DOCTYPE html>",
      "<html lang=\"en\">",
      "  <head>",
      "    <meta charset=\"UTF-8\">",
      "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
      "    <link rel=\"stylesheet\" href=\"${1:link}\">",
      "    <title>${2:title}</title>",
      "  </head>",
      "  <body>",
      "    ${3:body}",
      "  </body>",
      "</html>"
    ],
    "description": "html base",
    "scope": "source.html"
  },
  "divc": {
    "prefix": "divc",
    "body": "<div class=\"${1:class}\">${2:content}</div>",
    "description": "div class",
    "scope": "source.html"
  },
  "divi": {
    "prefix": "divi",
    "body": "<div id=\"${1:id}\">${2:content}</div>",
    "description": "div id",
    "scope": "source.html"
  },
  "script": {
    "prefix": "script",
    "body": "<script>${1:src}</script>",
    "description": "script",
    "scope": "source.html"
  },
  "scripts": {
    "prefix": "script",
    "body": "<script src=\"${1:src}\"></script>${2:eol}",
    "description": "script",
    "scope": "source.html"
  },
  "comicfont": {
    "prefix": "comic font",
    "body": "<link rel=\"stylesheet\" href=\"https://cdn.jsdelivr.net/npm/comic-mono@0.0.1/index.css\">",
    "description": "comic font",
    "scope": "source.html"
  }
}
